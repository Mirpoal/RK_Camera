<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/ap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ap_setting"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/layout01"
            android:layout_below="@+id/ap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:textSize="20dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:id="@+id/ap_name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textSize="20dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:id="@+id/ap_password"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv1"
            android:layout_below="@id/layout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/connect_hint"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_below="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sta_setting"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/layout02"
            android:layout_below="@+id/tv3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:textSize="20dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:id="@+id/sta_name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textSize="20dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:id="@+id/sta_password"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv4"
            android:layout_below="@+id/layout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/connect_hint"/>

        <TextView
            android:id="@+id/tv6"
            android:layout_below="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="@string/model_setting"/>

        <View
            android:id="@+id/v1"
            android:layout_below="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mline"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_below="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mod_change">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_model"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="15dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/change_mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_next_img"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:id="@+id/v2"
            android:layout_below="@+id/mod_change"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mline" />

        <TextView
            android:layout_below="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/model_change_hint"/>

        <ProgressBar
            android:id="@+id/connectpb"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>